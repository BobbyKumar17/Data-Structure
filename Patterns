 /* Pattern 6
  cout << "Enter n\n";
  int n;
  cin>>n;
  int i =1;

      while (i <= n) {
          // Print leading spaces
          int j = 1;
          while (j <= n - i) {
              cout << " ";
              j++;
          }

          // Print '*' characters
          j = 1;
          while (j <= i) {
              cout << "* ";
              j++;
          }

          // Move to the next line
          cout << endl;

          // Move to the next row
          i++;
      }

      return 0;
  }
*/

