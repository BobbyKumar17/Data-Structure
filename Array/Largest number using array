#include <iostream>
using namespace std;
int main() {
int arr[100];
  int n,i;
  cout<<"enter the size of an array\n";
  cin>>n;

  for(i=0;i<n;i++){
    cout<<"enter the elements "<<i+1<<endl;
    cin>>arr[i];

  }
  cout<<"the elements of an array are\n";
  for(i=1;i<n;i++){
    if(arr[0]<arr[i]){
      arr[0]=arr[i];
    }
  }
  cout<<"the largest element is \n"<<arr[0];
}
